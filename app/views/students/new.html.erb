<h1>Students New Form</h1>

<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <p style="color: red"><%= error%></p>
        <%end%>
<%end%>

<div>
    <%= f.label :name%>
    <%= f.text_field :name%>
    <%= f.label :age%>
    <%= f.number_field :age%>
    <%end%>
</div>

<div>
    <%= f.submit%>
</div>